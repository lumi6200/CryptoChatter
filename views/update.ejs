<%- include("partials/header.ejs"); %>

    <%- include("partials/back2.ejs") %>

        <div class="card">
            <div class="card-body">

                <h2>Update Post</h2>
                <hr class="orange">

                <form action="/update-post" method="post" id="update-form">
                    <input type="hidden" name="post_id" value="<%= post.id %>">

                    <div class="form-group"> <label for="title">Title:</label> <input type="text" name="title"
                            id="title" class="form-control" value="<%= post.title %>" required>
                    </div>

                    <div class="form-group"> <label for="content">Content:</label> <textarea name="content" id="content"
                            class="form-control no-resize" rows="6" required><%= post.content %></textarea>
                    </div>

                    <div class="d-flex flex-row-reverse">
                        <button type="button" class="btn" onclick="confirmUpdate()">
                            Update Post
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor"
                                class="bi bi-check-lg" viewBox="0 0 16 16">
                                <path
                                    d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425z" />
                            </svg>
                        </button>
                </form>
                <form action="/delete-post" method="post" id="delete-form">
                    <input type="hidden" name="post_id" value="<%= post.id %>">
                    <button type="button" class="btn mr-2" onclick="confirmDelete()">
                        Delete Post
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor"
                            class="bi bi-trash" viewBox="0 0 16 16">
                            <path
                                d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                            <path
                                d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                        </svg>
                    </button>
                </form>
            </div>
        </div>
        </div>

        <script>
            function confirmUpdate() {
                if (confirm("Are you sure you want to update this post?")) {
                    document.getElementById("update-form").submit();
                }
            }

            function confirmDelete() {
                if (confirm("Are you sure you want to delete this post? This action cannot be undone.")) {
                    document.getElementById("delete-form").submit();
                }
            }
        </script>


        <%- include("partials/footer.ejs"); %>